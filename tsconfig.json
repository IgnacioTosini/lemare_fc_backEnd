{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "ts-node": {
        "esm": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ]
}